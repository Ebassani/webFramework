<%- include('includes/head') %>
<link rel="stylesheet" href="css/card.css">
</head>

<body>
  <%- include('includes/header') %>
  <main>
    <div class="wrapper">
      <div class="topics">
        <p class="topics-title">Trending community</p>
        <div class="separator"></div>

        <% for (let topic of topics) { %>
        <div class="topic">
          <div class="topic-icon"><img src="/icons/Frame.png" alt="robot icon"></div>
          <div class="topic-desc">
            <div class="topic-desc__name"><%= topic.title %></div>
            <div class="topic-desc__counter">34k members</div>
          </div>
        </div>
        <% } %>
      </div>
      <div>
        <% if (cds.length > 0){ %>
        <div class="grid">
          <% for (let card of cds) { %>
          <article class="card product-item">
            <header class="card__header">
              <img src="/images/avatar1.png" alt="">
              <h2 class="product__title">
                r/<%= card.title %>
              </h2>
            </header>
            <div class="card__posted">Posted <%= card.date %></div>
            <p class="card__descr">
              <%= card.description %>
              <%= card.topics %>

            </p>
            <div class="separator"></div>

            <div class="card-actions">
              <a href=""><img src="icons/like.png" alt=""></a>
              <p class="card-actions__counter"><%= card.likes %> Likes</p>
              <a href=""><img src="/icons/Vector.png" alt=""></a>
              <p class="card-actions__counter">423 Comments</p>
            </div>

            <div class="card-actions">

              <button class="btn card-actions__btn">Comment</button>

              <button class="btn card-actions__btn" href="/edit-card/<%= card._id %>?edit=true">Edit</button>
              <form action="/delete-card" method="POST">
                <input type="hidden" value="<%= card._id %>" name="cardId">
                <button class="btn card-actions__btn" type="submit">Delete</button>
              </form>

            </div>
          </article>
          <% } %>
        </div>
        <% } else { %>
        <h1>No cards</h1>
        <% } %>
      </div>

    </div>

  </main>

</body>

</html>