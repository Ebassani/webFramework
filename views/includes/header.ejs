<header class="main-header">
  <div class="main-header-logo">
    <a href="/"><img src="../images/logo.png" alt="logo"></a>
  </div>
  <div class="main-header__actions">
    <% if(session.logged_user){ %>
    <div class="main-header__item"><a href="/profile">

        <button class="btn btn-avatar">
          <img class="btn-ava" src="../images/avatar1.png" alt="avatar1">
          <%= session.logged_user.username %>
          <img class="btn-arrow" src="../icons/triangle-down.png" alt="triangle down">
        </button>
      </a></div>
    <% }  else {%>
    <a class="btn btn-avatar" href="/login">
      Log In
    </a>
    <a class="btn btn-avatar" href="/register">
      Register
    </a>

    <% } %>

  </div>
</header>