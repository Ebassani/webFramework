<%- include('../includes/head') %>
<link rel="stylesheet" href="/css/card.css">
</head>

<body>
  <%- include('../includes/header') %>

  <main>
    <form class="product-form" action="/<% if (editing) { %>edit-card<% } else { %>add-card<% } %>" method="POST">
      <div class="form-control">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<% if (editing) { %><%= card.title %><% } %>">
      </div>
      <div class="form-control">
        <label for="description">Write here!</label>
        <textarea name="description" id="description" rows="5"><% if (editing) { %><%= card.description %><% } %></textarea>
      </div>
      <% if (editing) { %>
      <input type="hidden" value="<%= card._id %>" name="cardId">
      <% } %>

      <button class="btn" type="submit"><% if (editing) { %>Update Card<% } else { %>Add Card<% } %></button>
    </form>
  </main>
</body>

</html>